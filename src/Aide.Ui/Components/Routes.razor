@using Microsoft.AspNetCore.Components.Routing

<Router AppAssembly="typeof(Routes).Assembly">
    <Found Context="routeData">
        <RouteView RouteData="routeData" DefaultLayout="typeof(Aide.Ui.Components.Layout.MainLayout)" />
        <FocusOnNavigate RouteData="routeData" Selector="h1" />
    </Found>
    <NotFound>
        <LayoutView Layout="typeof(Aide.Ui.Components.Layout.MainLayout)">
            <div class="h-full flex items-center justify-center">
                <div class="text-center">
                    <div class="!text-6xl !mb-4">üîç</div>
                    <MudText Typo="Typo.h4" Class="!font-bold !mb-2">Page Not Found</MudText>
                    <MudText Typo="Typo.body1" Color="Color.Secondary" Class="!mb-6">Sorry, the page you're looking for doesn't exist.</MudText>
                    <MudButton Href="/"
                               Variant="Variant.Filled"
                               Color="Color.Primary"
                               Class="!rounded-full !px-6">
                        Go Home
                    </MudButton>
                </div>
            </div>
        </LayoutView>
    </NotFound>
</Router>
